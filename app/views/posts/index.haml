%h1.title Posts

%table#posts
  %tr
    %th Routes
    %th Text
    %th Short text
    %th Start datetime
    %th End datetime
    %th
    %th
  - @posts.each do |post|
    %tr
      %td= post.route_numbers
      %td= post.text
      %td= post.short_text
      %td
        - if post.start_datetime.present?
          = format_datetime post.start_datetime
      %td
        - if post.end_datetime.present?
          = format_datetime post.end_datetime
        - else
          Never
      %td= link_to 'Edit', edit_post_url(post)
      %td= button_to 'Delete', post_url(post), method: :delete
= link_to 'New post', new_post_url

= render 'scheduled'
